{
    "manifest_version": 2,
    "name": "Website Blocker",
    "version": "1.0",
    "description": "Blocks Instagram and Messenger",
    "permissions": ["webRequest", "webRequestBlocking", "<all_urls>"],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "blocker@example.com"
      }
    }
  }
  




